{
    "app-id": "com.dapperlinux.Dapper-Hardened-Browser",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.28",
    "sdk": "org.gnome.Sdk",
    "command": "firefox",
    /*"tags": [""],*/
    "rename-appdata-file" : "com.dapperlinux.Dapper-Hardened-Browser.appdata.xml",
    "rename-icon" : "com.dapperlinux.Dapper-Hardened-Browser",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=x11",
        /* Wayland access */
        "--socket=wayland",
        /* We want full fs access so we can read the files */
        "--filesystem=home:rw",
        /* Needs to talk to the network: */
        "--share=network",
        /* Use dark decorations for window */
        "--env=GTK_THEME_VARIANT=dark",
        /* Enable playing sound thru pulseaudio */
        "--socket=pulseaudio",
        /* Enable access to dri */
        "--device=dri",
        /* Enable themes support */
        "--filesystem=~/.config/dconf:ro",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        /* Required for file reveal in file manager */
        "--socket=session-bus"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        },
	"strip": true,
	"no-debuginfo": true
    },
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "*.la", "*.a"],
    "cleanup-commands": [ "/app/lib/rustlib/uninstall.sh"],
    "modules": [
      {
          "name": "autoconf-2.13",
          "config-opts": ["--program-suffix=2.13"],
          "sources": [
            {
                "type": "archive",
                "url": "https://ftp.gnu.org/gnu/autoconf/autoconf-2.13.tar.gz",
                "sha256": "f0611136bee505811e9ca11ca7ac188ef5323a8e2ef19cffd3edb3cf08fd791e"
            }
          ]
      },
      {
        "name": "gconf",
        "config-opts": ["--disable-orbit",
                        "--disable-gtk",
                        "--disable-documentation"],
        "sources": [
            {
                "type": "archive",
                "url": "https://ftp.gnome.org/pub/GNOME/sources/GConf/3.2/GConf-3.2.6.tar.xz",
                "sha256": "1912b91803ab09a5eed34d364bf09fe3a2a9c96751fde03a4e0cfa51a04d784c"
            }
        ]
      },
      {
        "name": "yasm",
        "config-opts": [],
        "sources": [
          {
              "type": "archive",
              "url": "http://www.tortall.net/projects/yasm/releases/yasm-1.3.0.tar.gz",
              "sha256": "3dce6601b495f5b3d45b59f7d2492a340ee7e84b5beca17e48f862502bd5603f"
          }
        ]
      },
      {
            "name": "libnotify",
            "config-opts": ["--disable-static"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libnotify/0.7/libnotify-0.7.6.tar.xz",
                    "sha256": "0ef61ca400d30e28217979bfa0e73a7406b19c32dd76150654ec5b2bdf47d837"
                }
            ]
      },
      {
            "name":"rust",
            "build-options" : { "no-debuginfo": true, "strip":false }, /* Stripped rust does not work */
            "sources": [
                {
                    "type": "archive",
                    "url": "https://static.rust-lang.org/dist/rust-1.30.0-x86_64-unknown-linux-gnu.tar.gz",
                    "sha256": "f620e3125cc505c842150bd873c0603432b6cee984cdae8b226cf92c8aa1a80f"
                },
                {
                    "type": "script",
                    "commands": ["#!/bin/bash", "#empty configure", "exit 0"],
                    "dest-filename": "configure"
                },
                {
                    "type": "script",
                    "commands": ["all:",
                                 "	echo 'Nothing to do'",
                                 "install:", 
                                 "	./install.sh --prefix=/app"
                                ],
                    "dest-filename": "Makefile"
                },
                {
                    "type": "script",
                    "commands": ["#!/bin/bash", "#empty configure", "exit 0"]
                },
                {
                    "type": "shell",
                    "commands": ["chmod +x configure"]
                },
                {
                    "type": "patch",
                    "path": "rust-uninstall.patch"
                }
            ]

      },
      {
          "name": "nodejs",
          "cleanup": [
              "/include",
              "/share",
              "/app/lib/node_modules/npm/changelogs",
              "/app/lib/node_modules/npm/doc",
              "/app/lib/node_modules/npm/html",
              "/app/lib/node_modules/npm/man",
              "/app/lib/node_modules/npm/scripts"
          ],
          "sources": [
              {
                  "type": "archive",
                  "url": "https://nodejs.org/dist/v8.12.0/node-v8.12.0.tar.xz",
                  "sha256": "5a9dff58016c18fb4bf902d963b124ff058a550ebcd9840c677757387bce419a"
              }
          ]
      },
      {
          "name": "firefox",
          "build-options" : {
            "env": {
              "STRIP": "/bin/true"
            }
          },
          "buildsystem": "simple",
            "build-commands": [
               "env CARGO_HOME=.cargo cargo install cbindgen",
               "env PATH=/run/build/firefox/.cargo/bin:$PATH ./mach build -j4",
               "env prefix=/app make install"
            ],
	  "make-install-args": ["prefix=/app"],
          "sources": [
              {
                  "type": "git",
                  "url": "https://github.com/mozilla/gecko-dev",
                  "branch" : "beta"
              },
              {
                  "type": "patch",
                  "path": "firefox-makeinstall.patch"
              },
              {
                  "type": "patch",
                  "path": "mozlog-no-blessings-req.patch"
              },
              {
                  "type": "file",
                  "path": "com.dapperlinux.Dapper-Hardened-Browser.appdata.xml",
                  "dest": ""
              },
              {
                  "type": "file",
                  "path": "firefox-mozconfig",
                  "dest": "",
                  "dest-filename": ".mozconfig"
              },
              {
                  "type": "file",
                  "path": "com.dapperlinux.Dapper-Hardened-Browser.desktop",
                  "dest": ""
              },
	      {
		  "type": "archive",
		  "path": "dapper.tar.xz",
		  "dest": "browser/branding/dapper"
	      },
	      {
		  "type": "file",
		  "path": "distribution.ini",
		  "dest": ""
	      },
	      {
		  "type": "file",
		  "path": "autoconfig.js",
		  "dest": ""
	      },
	      {
		  "type": "file",
		  "path": "mozilla.cfg",
		  "dest": ""
	      },
	      {
		  "type": "archive",
		  "path": "extensions.tar.xz",
		  "dest": "addons"
              },
              {
                  "type": "file",
                  "path": "cargo-config",
                  "dest-filename": "config",
                  "dest": ".cargo"
              },
              {
                  "type": "dir",
                  "path": "vendor",
                  "dest": "vendor"
	      }
          ]
      }
    ]
}
